<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="dosports.dosports.Lista_Eventos" android:background="@color/primario">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:id="@+id/linearLayout11">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:paddingTop="5dp"
            android:id="@+id/imageView4"
            android:src="@drawable/logo2"
            android:contentDescription="Logo" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout11"
        android:id="@+id/linearLayout18"
        android:layout_marginTop="20dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtrar"
            android:background="@color/boton"
            android:textColor="@color/blanco"
            android:id="@+id/filtrar"
            android:layout_alignTop="@+id/linearLayout18"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout18">

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listaEventos"
            android:layout_alignParentTop="true"
            android:background="@color/fondo"
            android:choiceMode="singleChoice"
            android:layout_marginTop="10dp" />

    </RelativeLayout>

</RelativeLayout>
